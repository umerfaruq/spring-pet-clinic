{
    "devDependencies": {
        "husky": "^7.0.4",
        "lint-staged": "^12.1.2",
        "prettier": "^2.5.0",
        "prettier-plugin-java": "^1.6.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{java,html,css,js,scss,yml,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "scripts": {
        "prepare": "husky install"
    }
}
